{
  "manifest_version": 3,
  "name": "JavaScript On/Off",
  "version": "1.2",
  "description": "Toggle JavaScript on or off for the current site.",
  "permissions": ["contentSettings", "tabs", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon_gray16.png",
      "32": "icon_gray32.png",
      "48": "icon_gray48.png",
      "128": "icon_gray128.png"
    },
    "default_title": "JavaScript On/Of"
  },
  "icons": {
    "16": "icon_gray16.png",
    "32": "icon_gray32.png",
    "48": "icon_gray48.png",
    "128": "icon_gray128.png"
  },
  "host_permissions": ["<all_urls>"]
}
